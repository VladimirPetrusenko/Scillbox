@model SkillProfiWebApplication.ViewModels.ContactsPageModel
@{
    ViewData["Title"] = "Contacts Page";
}

<link rel="stylesheet" href="~/css/Contacts.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="form-container">
    <div class="info-container">
        <div class="form-field">
            <label asp-for="@Model.Address">Адрес: @Model.Address</label>
        </div>
        <div class="form-field">
            <label asp-for="@Model.PhoneNumber">Телефон: @Model.PhoneNumber</label>
        </div>
        <div class="form-field">
            <label asp-for="@Model.Fax">Факс: @Model.Fax</label>
        </div>
        <div class="form-field">
            <label asp-for="@Model.Email">Email: @Model.Email</label>
        </div>
        <div class="social-links">
            @foreach (var status in @Model.SocialNetworks)
            {
                @if (status.Link != "#")
                {
                    <a href="@status.Link"><i class="@status.Name"></i></a>
                }
            }
        </div>
    </div>
    <div class="map-container">
        <h2>Местоположение на карте</h2>
        <img class="map-image" src="~/images/@Model.ContactsImage" alt="@Model.ContactsImage" />
    </div>
</div>




