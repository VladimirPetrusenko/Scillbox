@model SkillProfiWebApplication.Data.Project

@{
    ViewData["Title"] = "AddProject";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="~/css/Projects.css" />

<h1>Добавление проекта</h1>
<div class="maincard">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddProject">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-add-title-container">
                    <label asp-for="ProjectTitle" class="control-label">Название проекта</label>
                    <input asp-for="ProjectTitle" class="form-control" />
                    <span asp-validation-for="ProjectTitle" class="text-danger"></span>
                </div>
                <div class="card-add-img-container">
                    <label asp-for="ProjectImage" class="control-label">Изображение проекта</label>
                    <input type="file" asp-for="ProjectImage" class="form-control" />
                    <span asp-validation-for="ProjectImage" class="text-danger"></span>
                </div>
                <div class="card-add-details-container">
                    <label asp-for="ProjectDetails" class="control-label">Описание проекта</label>
                    <textarea asp-for="ProjectDetails" rows="7" class="form-control"></textarea>
                    <span asp-validation-for="ProjectDetails" class="text-danger"></span>
                </div>
                <div class="project-button">
                    <input type="submit" value="Добавить" class="btn btn-primary" /> | <a asp-action="Projects">Назад</a> 
                </div>
            </form>
        </div>
    </div>
</div>

