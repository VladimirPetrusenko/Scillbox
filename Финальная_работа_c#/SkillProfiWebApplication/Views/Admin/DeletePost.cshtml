@model SkillProfiWebApplication.Data.Post

@{
    ViewData["Title"] = "DeletePost";
}

<link rel="stylesheet" href="~/css/Posts.css" />
<h1>Удаление поста</h1>

<h3>Вы уверены что хотите удалить данный пост?</h3>
<form asp-action="DeletePost">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Id проекта
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                Название проекта
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostTitle)
            </dd>
            <dt class="col-sm-2">
                Картинка проекта
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/@Model.PostImage" style="max-width: 150px; max-height: 150px;" />
            </dd>
            <dt class="col-sm-2">
                Видимый фрагмент поста
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostFragment)
            </dd>
            <dt class="col-sm-2">
                Полное содержимое поста
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostFullContent)
            </dd>
            <dt class="col-sm-2">
                Дата публикации
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfPublication)
            </dd>
        </dl>
        <div class="delete-post-button">
            <input type="submit" value="Удалить" class="btn btn-danger" /> | <a asp-action="Posts">Назад</a>
        </div>
    </div>
</form>
