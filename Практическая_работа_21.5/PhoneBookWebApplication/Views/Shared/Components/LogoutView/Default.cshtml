@if (User.Identity.IsAuthenticated)
{
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="nav-link" href="~/">В начало</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Add">Добавить запись в телефонную книгу</a>
                </li>
                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/GetUsers">Список пользователей</a>
                    </li>
                }
            </ul>
            <form method="post" asp-controller="Account" asp-action="Logout" id="logoutform" asp-antiforgery="true">
                <a class="nav-item" href="#" onclick="document.getElementById('logoutform').submit()">Выход</a>
            </form>
        </div>
    </nav>
}
else
{
    <div class="btn-group pull-right">
        <a class="navbar-brand" href="/Account/Login">Вход</a>
        <a class="navbar-brand" href="/Account/Register">Регистрация</a>
    </div>
}